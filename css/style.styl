filter()
	-webkit-filter arguments
	-moz-filter arguments
	-ms-filter arguments
	filter arguments

body
	font-family 'Open Sans' sans-serif
	font-weight 600
	margin 0 0 0 0
	background #FDFDFD
	padding 20px 0 20px 0

	.wrapper
		text-align center
		padding-left 15%
		padding-right 15%

path
	fill #333

#icon
	padding 0 0 10px 0
	filter drop-shadow(0 2.5px 2px #333)

h1
	color #333
	margin 0 0 20px 0

ul
	list-style-type none
	margin 0
	padding 0
	font-size 20px

	.entry
		overflow auto
		max-width 100%

		+ .entry
			border-top 1px solid #888

		div
			display inline
			float left
			padding 6px 5px 6px 6px
			color #333

		.size
			text-align right
			line-height 20px
			padding 12px 10px 12px 10px
			width 96px
			color #7557BC

		.info
			width calc(100% \- 116px \- 136px)
			white-space nowrap
			overflow-x hidden
			line-height 20px
			text-align center
			padding 12px 10px 12px 10px

		.commit
			padding-left 13px
			padding-right 13px

			// doctype html adds 6px of space to the bottom of this div for
			// some reason I do not comprehend. Rather than simply not
			// declaring a doctype, I chose instead to use a bad css
			// workaround.
			height 32px
			&:hover path
				fill #6699CC

		.download
			padding-left 13px
			padding-right 13px
			height 32px

			&:hover path
				fill #99CC99
